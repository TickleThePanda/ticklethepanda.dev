{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "signals": [
    {
      "name": "minimumPointSize",
      "update": "15 * PI"
    },
    {
      "name": "basePointSize",
      "update": "width / data('source').length * PI"
    },
    {
      "name": "pointSize",
      "update": "basePointSize > minimumPointSize ? basePointSize : minimumPointSize"
    },
    {
      "name": "minDate"
    },
    {
      "name": "fontSize",
      "update": "14"
    }
  ],

  "data": [
    {
      "name": "source",
      "transform": [
        { "type": "filter", "expr": "datum.date > minDate" }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "utc",
      "nice": true,
      "domain": [{"signal": "minDate"}, {"signal": "now()"}],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": {"data": "source", "field": "weight", "sort": true},
      "clamp": true,
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "gridColor": "#fce6e9",
      "tickColor": "#232946",
      "labelColor": "#232946",
      "titleColor": "#232946",
      "orient": "bottom",
      "title": "Date",
      "format": "%Y %b",
      "labelOverlap": true,
      "encode": {
        "labels": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        },
        "title": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        }
      }
    },
    {
      "scale": "y",
      "grid": true,
      "gridColor": "#fce6e9",
      "tickColor": "#232946",
      "labelColor": "#232946",
      "titleColor": "#232946",
      "orient": "left",
      "title": "Weight",
      "labelOverlap": true,
      "encode": {
        "labels": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        },
        "title": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        }
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "line",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "date"},
          "y": {"scale": "y", "field": "weight"},
          "stroke": {"value": "#232946"},
          "strokeWidth": {"value": 2}
        }
      }
    }
  ]
}
