{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "padding": 15,
  "signals": [
    {
      "name": "minDate"
    },
    {
      "name": "minY"
    },
    {
      "name": "maxY"
    },
    {
      "name": "paddingScale"
    },
    {
      "name": "decorColor",
      "value": "#8a6763"
    }
  ],

  "data": [
    {
      "name": "source",
      "transform": [
        { "type": "filter", "expr": "datum.date > minDate" }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "utc",
      "nice": false,
      "domain": [{"signal": "minDate"}, {"signal": "now()"}],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "zero": false,
      "domain": {"data": "source", "field": "weight", "sort": true},
      "domainMin": {
        "signal": "minY"
      },
      "domainMax": {
        "signal": "maxY"
      },
      "clamp": true,
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "tickColor": {
        "signal": "decorColor"
      },
      "labelColor": {
        "signal": "decorColor"
      },
      "domainColor": {
        "signal": "decorColor"
      },
      "domainOpacity": 0,
      "titleColor": {
        "signal": "decorColor"
      },
      "orient": "bottom",
      "format": "%Y %b",
      "labelOverlap": "parity",
      "labelPadding": {
        "signal": "paddingScale / 2"
      },
      "labelSeparation": {
        "signal": "paddingScale * 2"
      }
    },
    {
      "scale": "y",
      "grid": true,
      "gridColor": "#deaaa4",
      "tickColor": {
        "signal": "decorColor"
      },
      "labelColor": {
        "signal": "decorColor"
      },
      "domainColor": {
        "signal": "decorColor"
      },
      "domainOpacity": 0,
      "titleColor": {
        "signal": "decorColor"
      },
      "orient": "left",
      "title": "Weight (kg)",
      "titleFontWeight": "400",
      "titlePadding": {
        "signal": "paddingScale"
      },
      "labelPadding": {
        "signal": "paddingScale / 2"
      },
      "labelOverlap": "parity",
      "labelSeparation": {
        "signal": "paddingScale"
      },
      "tickCount": 4
    }
  ],
  "marks": [
    {
      "name": "line",
      "type": "line",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "date"},
          "y": {"scale": "y", "field": "weight"},
          "stroke": {"value": "#405068"},
          "strokeWidth": {
            "value": 2
          },
          "interpolate": {
            "value": "linear"
          }
        }
      }
    }
  ]
}
