{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 1000,
  "height": 600,
  "padding": 5,
  "autosize": {
    "type": "fit",
    "resize": true
  },

  "signals": [
    {
      "name": "minimumPointSize",
      "update": "2.5 * PI"
    },
    {
      "name": "basePointSize",
      "update": "width / data('source').length * PI"
    },
    {
      "name": "pointSize",
      "update": "basePointSize > minimumPointSize ? basePointSize : minimumPointSize"
    },
    {
      "name": "minDate"
    },
    {
      "name": "fontSize",
      "update": "14"
    }
  ],

  "data": [
    {
      "name": "source",
      "transform": [
        { "type": "filter", "expr": "datum.date > minDate" }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "utc",
      "nice": true,
      "domain": [{"signal": "minDate"}, {"signal": "now()"}],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": {"data": "source", "field": "weight"},
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "orient": "bottom",
      "title": "Date",
      "format": "%Y %b",
      "labelOverlap": true,
      "encode": {
        "labels": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        },
        "title": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        }
      }
    },
    {
      "scale": "y",
      "grid": true,
      "orient": "left",
      "title": "Weight",
      "labelOverlap": true,
      "encode": {
        "labels": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        },
        "title": {
          "update": {
            "fontSize": {"signal": "fontSize"}
          }
        }
      }
    }
  ],

  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "date"},
          "y": {"scale": "y", "field": "weight"},
          "size": {"signal": "pointSize"},
          "shape": {"value": "circle"},
          "opacity": {"value": 1},
          "stroke": {"value": "transparent"},
          "fill": {"value": "#232946"}
        }
      }
    }
  ]
}

